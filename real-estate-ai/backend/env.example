# Real Estate AI - Sri Lanka Edition
# Environment Configuration

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=realestate_srilanka

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service - Google Gemini
GEMINI_API_KEY=your_google_gemini_api_key_here

# CORS (Frontend URL)
ALLOW_ORIGINS=http://localhost:3000

# Payments / Stripe
# Obtain from your Stripe dashboard (test or live)
STRIPE_SECRET_KEY=

# Where Stripe should redirect after payment success/cancel
# You can omit these to use local defaults
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# Sri Lanka Specific Settings
COUNTRY_CODE=LK
CURRENCY=LKR
DEFAULT_CITY=Colombo
DEFAULT_LANGUAGE=en

# Market Data Sources (for future integration)
SRI_LANKA_PROPERTY_API_URL=
UDA_API_KEY=
MUNICIPAL_DATA_URL=

# Localization
TIMEZONE=Asia/Colombo
DATE_FORMAT=DD/MM/YYYY
CURRENCY_FORMAT=LKR #,##0.00

# Property Analysis Settings
MIN_PROPERTY_AREA=100
MAX_PROPERTY_AREA=10000
MIN_LAND_SIZE=50
MAX_LAND_SIZE=100000

# Location Analysis
ENABLE_DISTRICT_ANALYSIS=true
ENABLE_TOURIST_AREA_ANALYSIS=true
ENABLE_HERITAGE_SITE_ANALYSIS=true

# Price Estimation
BASE_PRICE_PER_SQFT=25000
ENABLE_MARKET_TREND_ANALYSIS=true
ENABLE_INVESTMENT_POTENTIAL_ANALYSIS=true

